<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customEditTextattr="http://schemas.android.com/apk/res/com.example.jizhang1"
    xmlns:customButtonattr="http://schemas.android.com/apk/res/com.example.jizhang1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

   <RadioGroup
        android:id="@+id/radiogroup1"
       	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radiobutton1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="购物娱乐"/>
         <RadioButton
            android:id="@+id/radiobutton2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-80dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="交通出行"/>
        <RadioButton
            android:id="@+id/radiobutton3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-80dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="饮食"/>
        <RadioButton
            android:id="@+id/radiobutton4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="日常生活"/>
         <RadioButton
             android:id="@+id/radiobutton5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-80dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="人情往来"/>
        <RadioButton
            android:id="@+id/radiobutton6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-80dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:text="其他"/>
    </RadioGroup>
 
    <com.example.jizhang1.customEditText
        android:id="@+id/edittext1"
        customEditTextattr:line_color="#ffe71d37"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxLength="30"
        android:text="请输入备注" />


    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">
    	<NumberPicker 
        	android:id="@+id/numberpicker1"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:focusableInTouchMode="true" />
    	<NumberPicker 
        	android:id="@+id/numberpicker2"
        	android:layout_width="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:focusableInTouchMode="true"/>
    	<NumberPicker 
        	android:id="@+id/numberpicker3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_weight="1"
        	android:focusableInTouchMode="true"/>
    	<NumberPicker 
        	android:id="@+id/numberpicker4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_weight="1"
        	android:focusableInTouchMode="true"/>
    	<NumberPicker 
        	android:id="@+id/numberpicker5"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_weight="1"/>
    </LinearLayout>
    <com.example.jizhang1.customButton
        android:id="@+id/okaybutton"
        customButtonattr:button_color="#ffe71d37"
        customButtonattr:button_text="确定"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
